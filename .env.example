PORT=8080
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=12345678
DB_NAME=mini_commerce
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# JWT Authentication
JWT_SECRET=your_jwt_secret

# Email Configuration for Low Stock Notifications
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=notifications@mini-commerce.com

# Notification Settings
ADMIN_EMAIL=admin@example.com
LOW_STOCK_THRESHOLD=10
ENABLE_SCHEDULED_NOTIFICATIONS=true
NOTIFICATION_SCHEDULE="0 9 * * *"  # Cron expression for daily at 9 AM